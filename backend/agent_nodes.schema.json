{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Complex",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/DataType"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/DataType"
      }
    },
    "end_node": {
      "type": "string",
      "format": "uuid"
    },
    "defaults": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/DataValue"
      }
    },
    "instances": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/Instance"
      }
    }
  },
  "required": [
    "inputs",
    "outputs",
    "end_node",
    "defaults",
    "instances"
  ],
  "$defs": {
    "DataType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Array",
            "String",
            "Integer",
            "Float",
            "Boolean",
            "Byte",
            "Handle",
            "Object",
            "None"
          ]
        },
        {
          "type": "object",
          "properties": {
            "Agent": {
              "$ref": "#/$defs/AgentType"
            }
          },
          "required": [
            "Agent"
          ],
          "additionalProperties": false
        }
      ]
    },
    "AgentType": {
      "type": "string",
      "enum": [
        "OpenAi",
        "OpenRouter"
      ]
    },
    "DataValue": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "integer",
          "format": "int64"
        },
        {
          "type": "number",
          "format": "double"
        },
        {
          "type": "boolean"
        },
        {
          "type": "integer",
          "format": "uint8",
          "minimum": 0,
          "maximum": 255
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DataValue"
          }
        },
        {
          "type": "string",
          "format": "uuid"
        },
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/DataValue"
          }
        },
        {
          "type": "array",
          "prefixItems": [
            {
              "$ref": "#/$defs/AgentType"
            },
            {
              "type": "string",
              "format": "uuid"
            }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        {
          "type": "null"
        }
      ]
    },
    "Instance": {
      "type": "object",
      "properties": {
        "node_type": {
          "$ref": "#/$defs/NodeType"
        },
        "default_overrides": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/DataValue"
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/DataType"
          }
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "array",
            "prefixItems": [
              {
                "$ref": "#/$defs/DataType"
              },
              {
                "type": "string",
                "format": "uuid"
              },
              {
                "type": "integer",
                "format": "uint",
                "minimum": 0
              },
              {
                "type": "boolean"
              }
            ],
            "minItems": 4,
            "maxItems": 4
          }
        }
      },
      "required": [
        "node_type",
        "default_overrides",
        "outputs",
        "inputs"
      ]
    },
    "NodeType": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "Atomic": {
              "$ref": "#/$defs/AtomicType"
            }
          },
          "required": [
            "Atomic"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Complex": {
              "type": "string"
            }
          },
          "required": [
            "Complex"
          ],
          "additionalProperties": false
        }
      ]
    },
    "AtomicType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Print",
            "Replace",
            "IsNone"
          ]
        },
        {
          "type": "object",
          "properties": {
            "BinOp": {
              "$ref": "#/$defs/AtomicBinOp"
            }
          },
          "required": [
            "BinOp"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "UnaryOp": {
              "$ref": "#/$defs/AtomicUnaryOp"
            }
          },
          "required": [
            "UnaryOp"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Value": {
              "$ref": "#/$defs/DataValue"
            }
          },
          "required": [
            "Value"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Control": {
              "$ref": "#/$defs/ControlFlow"
            }
          },
          "required": [
            "Control"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Variable": {
              "type": "array",
              "prefixItems": [
                {
                  "$ref": "#/$defs/Variable"
                },
                {
                  "type": "string"
                }
              ],
              "minItems": 2,
              "maxItems": 2
            }
          },
          "required": [
            "Variable"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Io": {
              "$ref": "#/$defs/AtomicIo"
            }
          },
          "required": [
            "Io"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "Cast": {
              "$ref": "#/$defs/DataType"
            }
          },
          "required": [
            "Cast"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "LogicalOp": {
              "$ref": "#/$defs/AtomicLogic"
            }
          },
          "required": [
            "LogicalOp"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "AgentOp": {
              "$ref": "#/$defs/AgentOperation"
            }
          },
          "required": [
            "AgentOp"
          ],
          "additionalProperties": false
        }
      ]
    },
    "AtomicBinOp": {
      "type": "string",
      "enum": [
        "Add",
        "Sub",
        "Mul",
        "Div",
        "Pow",
        "Mod"
      ]
    },
    "AtomicUnaryOp": {
      "type": "string",
      "enum": [
        "Neg"
      ]
    },
    "ControlFlow": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Start",
            "End"
          ]
        },
        {
          "type": "object",
          "properties": {
            "WaitForInit": {
              "type": "array",
              "prefixItems": [
                {
                  "$ref": "#/$defs/DataType"
                },
                {
                  "type": "string",
                  "format": "uuid"
                },
                {
                  "type": "integer",
                  "format": "uint",
                  "minimum": 0
                },
                {
                  "type": "boolean"
                }
              ],
              "minItems": 4,
              "maxItems": 4
            }
          },
          "required": [
            "WaitForInit"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "While": {
              "type": "array",
              "prefixItems": [
                {
                  "$ref": "#/$defs/DataType"
                },
                {
                  "type": "string",
                  "format": "uuid"
                },
                {
                  "type": "integer",
                  "format": "uint",
                  "minimum": 0
                },
                {
                  "type": "boolean"
                }
              ],
              "minItems": 4,
              "maxItems": 4
            }
          },
          "required": [
            "While"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "If": {
              "type": "array",
              "prefixItems": [
                {
                  "$ref": "#/$defs/DataType"
                },
                {
                  "type": "string",
                  "format": "uuid"
                },
                {
                  "type": "integer",
                  "format": "uint",
                  "minimum": 0
                },
                {
                  "type": "boolean"
                }
              ],
              "minItems": 4,
              "maxItems": 4
            }
          },
          "required": [
            "If"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Variable": {
      "type": "string",
      "enum": [
        "Set",
        "Get"
      ]
    },
    "AtomicIo": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "ConsoleInput",
            "Read",
            "Write",
            "GetLine"
          ]
        },
        {
          "type": "object",
          "properties": {
            "Open": {
              "$ref": "#/$defs/IoType"
            }
          },
          "required": [
            "Open"
          ],
          "additionalProperties": false
        }
      ]
    },
    "IoType": {
      "type": "string",
      "enum": [
        "File",
        "TcpSocket"
      ]
    },
    "AtomicLogic": {
      "type": "string",
      "enum": [
        "And",
        "Or",
        "Xor",
        "Not",
        "Eq"
      ]
    },
    "AgentOperation": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "Send",
            "Recieve"
          ]
        },
        {
          "type": "object",
          "properties": {
            "Create": {
              "$ref": "#/$defs/AgentType"
            }
          },
          "required": [
            "Create"
          ],
          "additionalProperties": false
        }
      ]
    }
  }
}

